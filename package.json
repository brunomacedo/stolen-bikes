{
  "name": "stolen-bikes",
  "version": "0.5.1",
  "private": true,
  "author": "Bruno Macedo <contato@brunomacedo.com.br> (https://brunomacedo.com.br/)",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/styled-components": "^5.1.7",
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.32",
    "path": "^0.12.7",
    "react": "^17.0.1",
    "react-datepicker": "^3.3.0",
    "react-dom": "^17.0.1",
    "react-js-pagination": "^3.0.3",
    "react-lazy-load-image-component": "^1.5.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "ssl-express-www": "^3.0.7",
    "styled-components": "^5.2.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@types/react-datepicker": "^3.1.2",
    "@types/react-js-pagination": "^3.0.3",
    "@types/react-lazy-load-image-component": "^1.5.1",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "conventional-changelog-cli": "^2.1.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "gzipper": "^4.3.0"
  },
  "scripts": {
    "dev": "react-scripts start",
    "start": "node .",
    "build": "react-scripts build && gzipper c --verbose ./build",
    "test": "react-scripts test",
    "heroku-postbuild": "npm run build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "extends": [
      "airbnb",
      "react-app/jest",
      "plugin:jsx-a11y/recommended"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ],
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "camelcase": "off",
      "react/react-in-jsx-scope": "off",
      "react/jsx-uses-react": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".jsx",
            ".js",
            ".tsx",
            ".ts"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never",
          "js": "never",
          "jsx": "never",
          "tsx": "never"
        }
      ],
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": "off"
    },
    "globals": {
      "document": true,
      "window": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
